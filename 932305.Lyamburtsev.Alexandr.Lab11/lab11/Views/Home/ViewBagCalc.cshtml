@{
    ViewData["Title"] = "ViewBag Calculator";
    int firstNumber = ViewBag.operandA;
    int secondNumber = ViewBag.operandB;
}

<h2>ViewBag Data Transfer</h2>
<p class="bold">First number: @firstNumber</p>
<p class="bold">Second number: @secondNumber</p>
<p class="bold">Addition:</p>
<p>@firstNumber + @secondNumber = @(firstNumber + secondNumber)</p>
<p class="bold">Subtraction:</p>
<p>@firstNumber - @secondNumber = @(firstNumber - secondNumber)</p>
<p class="bold">Multiplication:</p>
<p>@firstNumber * @secondNumber = @(firstNumber* secondNumber)</p>
<p class="bold">Division:</p>
<p>@firstNumber / @secondNumber = @(secondNumber != 0 ? Math.Floor((double)firstNumber / secondNumber) : "error")</p>
